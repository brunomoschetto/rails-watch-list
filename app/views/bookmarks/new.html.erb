<div class="container">
  <h1>Agregar un bookmark a la lista: <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |form| %>
    <div class="field">
      <%= form.input :movie_id, collection: Movie.all, label: "Select a movie", as: :select %>
    </div>

    <div class="field">
      <%= form.input :comment, label: "Comment" %>
    </div>

    <div class="actions">
      <%= form.button :submit, "Add bookmark", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= link_to 'Back to list page', list_path(@list), class: "btn btn-primary" %>
</div>
