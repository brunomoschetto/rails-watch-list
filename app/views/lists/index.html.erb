<h1>Lists available: </h1>

<% @lists.each do |list| %>
  <div class="container">
    <p><strong>List name:</strong> <%= list.name %></p><br>
    <%= link_to "List details", list_path(list), class: "btn btn-warning" %>
  </div>
<% end %>

<%= link_to "Add a new list", new_list_path, class: "btn btn-success" %>
