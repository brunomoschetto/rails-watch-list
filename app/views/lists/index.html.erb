<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path("movie_img.jpg") %>');">
  <div class="container">
    <h1>My movie lists</h1>
    <p>Change your life and organize your movies with this awesome web app</p>
  </div>
</div>

<div class="container">
  <div class="lists-section">
    <% @lists.each do |list| %>
      <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path("movie_img.jpg") %>');background-size: cover; background-position: center; background-repeat: no-repeat;">
        <p class="list-card-text"><%= list.name %></p>
        <div class="button-container">
          <%= link_to "See details", list_path(list), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
</div>
