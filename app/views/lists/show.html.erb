<div class="container list-detail">
  <h1 class="list-title">Name: <%= @list.name %></h1>
  <h3 class="list-id">ID: <%= @list.id %></h3>

  <h2 class="list-movies-title">Movies in this list:</h2>

  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill, class: "list-image" %>
  <% end %>

  <ul class="bookmark-list">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="bookmark-item">
        <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
        <%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>

  <div class="button-container">
    <%= link_to 'Add new movie to this list', new_list_bookmark_path(@list), class: "btn btn-success" %>
    <%= link_to "Back to lists view", root_path, class: "btn btn-primary" %>
  </div>
</div>
