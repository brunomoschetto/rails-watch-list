<div class="container">
  <h1>Create a new list</h1>

  <%= simple_form_for @list do |form| %>
    <div class="field">
      <%= form.input :name, label: "List name" %>
    </div>

    <div class="field">
      <%= form.input :photo, as: :file %>
    </div>

    <div class="actions">
      <%= form.button :submit, "Create list", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Back to lists view", root_path, class: "btn btn-primary" %>
</div>
